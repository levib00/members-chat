extends layout

block content
  h2= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Title' name='title' required='true' value=(undefined===message ? '' : message.message) )
    div.form-group
      label(for='message') Message:
      input#message.form-control(type='textbox', placeholder='Type your message here!' name='content' required='true' value=(undefined===message ? '' : message.message) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg