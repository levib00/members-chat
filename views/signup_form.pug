extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first-name.form-control(type='text', placeholder='John' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
    div.form-group
      label(for='last_name') Last Name:
      input#last-name.form-control(type='text', placeholder='Doe' name='last_name' required='true' value=(undefined===user ? '' : user.last_name) )
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='JohnD29' name='username' required='true' value=(undefined===user ? '' : user.username) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='password' name='password' required='true' value=('') )
    div.form-group
      label(for='username') Confirm Password:
      input#passwordConfirmation.form-control(type='password', placeholder='confirm password' name='passwordConfirmation' required='true' value=('') )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg