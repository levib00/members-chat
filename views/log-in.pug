extends layout

block content
  h2= title

  form(method='POST' action='/users/log-in')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='JohnD29' name='username' required='true' value=(undefined===user ? '' : user.username) )
    div.form-group
      label(for='username') Password:
      input#password.form-control(type='password', placeholder='password' name='password' required='true' value=('') )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
        li!= errors